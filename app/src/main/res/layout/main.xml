<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/rt"
            android:id="@+id/runtime"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="5dp" />

    <com.esri.android.map.MapView
            android:id="@+id/map"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_above="@id/runtime"/>

    <Button android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="?android:attr/actionBarSize"
            android:layout_marginLeft="5dp"
            android:onClick="onSwitchMode"
            android:text="L"/>

    <Button android:id="@+id/take_photo"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="?android:attr/actionBarSize"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:onClick="onCameraClick"
            android:text="拍照"/>
    <Button android:id="@+id/take_report"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_below="@id/take_photo"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:onClick="onReportClick"
            android:text="报告"/>

</RelativeLayout>