<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="#bb333333">

    <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

        <TextView
                android:id="@+id/l0"
                style="@style/InfoText"
                android:text="任务"/>

        <TextView
                android:id="@+id/taskdesc"
                style="@style/InfoText"
                android:layout_toRightOf="@id/l0"
                android:layout_alignParentRight="true"
                android:gravity="right"/>

        <LinearLayout
                android:id="@+id/g0"
                android:orientation="horizontal"
                android:layout_below="@id/l0"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" >
                <TextView
                        android:id="@+id/l1"
                        style="@style/InfoText"
                        android:text="时长"/>

                <Chronometer
                        android:id="@+id/elapse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/l1"
                        android:layout_alignTop="@id/l1"
                        android:layout_alignParentRight="true"
                        android:format="%s"
                        android:gravity="right"
                        android:textColor="@color/result_text"
                        android:textSize="16sp"/>

                <TextView
                        android:id="@+id/l20"
                        style="@style/InfoText"
                        android:layout_below="@id/l1"
                        android:layout_marginTop="2dp"
                        android:text="距离"/>

                <TextView
                        android:id="@+id/distance"
                        style="@style/InfoText"
                        android:layout_alignTop="@id/l20"
                        android:layout_alignLeft="@id/elapse"
                        android:layout_toLeftOf="@+id/l21"
                        android:text="0.00"
                        android:gravity="right"/>

                <TextView
                        android:id="@id/l21"
                        style="@style/InfoText"
                        android:layout_alignTop="@id/l20"
                        android:layout_alignParentRight="true"
                        android:text=" km"/>

            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" >

                <TextView
                        android:id="@+id/speed"
                        style="@style/InfoText"
                        android:layout_toLeftOf="@+id/l31"
                        android:textSize="32sp"
                        android:text="0.00"
                        android:layout_centerVertical="true"
                        android:gravity="right"/>

                <TextView
                        android:id="@id/l31"
                        style="@style/InfoText"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:text=" km/h"/>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_below="@id/g0"
                android:layout_marginTop="2dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">

            <TextView
                    android:id="@+id/l40"
                    style="@style/InfoText"
                    android:text="位置"
                    android:layout_weight="2"/>

            <TextView
                    android:id="@+id/longitude"
                    style="@style/InfoText"
                    android:text="0.00"
                    android:lines="1"
                    android:gravity="right"
                    android:layout_marginRight="10dp"
                    android:layout_weight="4"/>

            <TextView
                    android:id="@+id/latitude"
                    style="@style/InfoText"
                    android:text="0.00"
                    android:lines="1"
                    android:gravity="right"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="4"/>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拍照"
                android:onClick="onCameraClick"
                android:layout_weight="1"/>
        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="报告"
                android:onClick="onReportClick"
                android:layout_weight="1"/>
        <Button
                android:id="@+id/btnTaskStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出发"
                android:onClick="onStartClick"
                android:layout_weight="1"/>
        <Button
                android:id="@+id/btnTaskArrive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="到达"
                android:onClick="onArriveClick"
                android:layout_weight="1"/>
        <Button
                android:id="@+id/btnTaskFinish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完成"
                android:onClick="onFinishClick"
                android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>